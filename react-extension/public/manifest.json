{
  "name": "In-Sight AI",
  "version": "1.0",
  "manifest_version": 3,
  "description": "AI-powered browser extension that generates interactive image descriptions for visually impaired users.",

  "action": {
    "default_popup": "index.html",
    "default_icon": "logo512.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "commands": {
    "open_extension": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Open the extension"
    }
  },

  "permissions": ["tabs", "tabCapture", "activeTab", "scripting", "storage"],

  "icons": {
    "16": "favicon.ico",
    "48": "logo192.png",
    "128": "logo512.png"
  }
}
